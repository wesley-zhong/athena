{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cmake-engine",
			"type": "cppbuild",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			],
			"options": {
				"cwd": "${workspaceFolder}/engine/build"
			},
		},
		{
			"label": "make-engine",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "make",
			"args": ["-j8",], //根据机器cpu核心数量自行调整
			"options": {
				"cwd": "${workspaceFolder}/engine/build"
			},
		},
		

		{
			"label": "cmake-game",
			"type": "cppbuild",
			"command": "cmake",
			"args": [
				"..",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}/game/build"
			},
		},
		{
			"label": "make-game-rm-bin",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "rm",
			"args": ["-f", "./game"], //根据机器cpu核心数量自行调整
			"options": {
				"cwd": "${workspaceFolder}/game/build"
			},
		},
		{
			"label": "make-game",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "make",
			"args": ["-j8",], //根据机器cpu核心数量自行调整
			"options": {
				"cwd": "${workspaceFolder}/game/build"
			},
		},
		
		{
			"label": "build-game",
			"dependsOrder": "sequence",
			"dependsOn": ["cmake-engine", "make-engine", "cmake-game","make-game-rm-bin", "make-game"]
		}		
	]
}